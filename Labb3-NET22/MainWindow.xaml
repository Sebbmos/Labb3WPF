<Window x:Class="Labb3_NET22.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_NET22"
        mc:Ignorable="d"
        Title="MainWindow" Height="440" Width="600">
    <Grid Background="#FFAAB9C3">
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Button Content="Play Quiz" Grid.Row="1" VerticalAlignment="Center" Height="100" HorizontalContentAlignment="Center" Click="PlayQuiz_Click" />
        <Button Content="Edit Quiz" Grid.Row="2" VerticalAlignment="Center" Height="100" HorizontalContentAlignment="Center" Click="EditQuiz_Click"/>
        <Button Content="Create Quiz" Grid.Row="3" VerticalAlignment="Center" Height="100" HorizontalContentAlignment="Center" Click="CreateQuiz_Click"/>
        <Button Content="Exit" Grid.Row="4" VerticalAlignment="Center" Height="100" HorizontalContentAlignment="Center" Click="ExitQuiz_Click"/>
        <ContentControl x:Name="MainContent" />


    </Grid>
</Window>
