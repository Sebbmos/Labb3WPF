<UserControl x:Class="Labb3_NET22.Quizmenu.EditQuiz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_NET22.Quizmenu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Padding="16">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Left: files + question list -->
            <StackPanel Grid.Column="0" Grid.Row="0">
                <TextBlock Text="Open" FontSize="20" Margin="0,0,0,8"/>
                <Button Content="Open quiz file..." Width="160" Click="Open_Click"/>
                <ListBox x:Name="FilesList" Height="140" Margin="0,8,0,0"/>
                <Button Content="Load marked" Width="160" Click="LoadSelected_Click" Margin="0,8,0,8"/>
                <Separator/>
                <TextBlock Text="Questions" FontSize="16" Margin="0,8,0,4"/>
                <ListBox x:Name="QuestionsList" Height="180" SelectionChanged="QuestionsList_SelectionChanged"/>
            </StackPanel>

            
            <StackPanel Grid.Column="1" Grid.Row="0">
                <TextBlock Text="Edit question" FontSize="20" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock VerticalAlignment="Center" Text="Titel:" Width="60"/>
                    <TextBox x:Name="TitleBox" Width="300"/>
                </StackPanel>

                <TextBlock Text="Question:"/>
                <TextBox x:Name="QuestionBox" Margin="0,2,0,8"/>

                <TextBlock Text="Answer 1:"/>
                <TextBox x:Name="Ans0" Margin="0,2,0,4"/>

                <TextBlock Text="Answer 2:"/>
                <TextBox x:Name="Ans1" Margin="0,2,0,4"/>

                <TextBlock Text="Answer 3:"/>
                <TextBox x:Name="Ans2" Margin="0,2,0,8"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock VerticalAlignment="Center" Text="Correct index:" Margin="0,0,8,0"/>
                    <ComboBox x:Name="CorrectCombo" Width="80" SelectedIndex="0" SelectionChanged="CorrectCombo_SelectionChanged">
                        <ComboBoxItem Content="0"/>
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>

            
            <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,12,0,0">
                <Button Content="Update" Width="120" Click="Update_Click"/>
                <Button Content="Save" Width="120" Margin="8,0,0,0" Click="Save_Click"/>
                <Button Content="Back" Width="120" Margin="8,0,0,0" Click="Back_Click" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
