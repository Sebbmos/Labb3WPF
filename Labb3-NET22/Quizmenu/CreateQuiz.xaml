<UserControl x:Class="Labb3_NET22.Quizmenu.CreateQuiz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_NET22.Quizmenu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            
            <TextBlock Text="Create Quiz" FontSize="20" Margin="0,0,0,12"/>

            
            <StackPanel Grid.Row="1">
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock VerticalAlignment="Center" Text="Title:" Width="60"/>
                    <TextBox x:Name="TitleBox" Width="300"/>
                </StackPanel>

                <Separator Margin="0,0,0,8"/>

                <TextBlock Text="New Question" FontWeight="Bold" Margin="0,0,0,8"/>

                <TextBlock Text="Question:"/>
                <TextBox x:Name="QuestionBox" Margin="0,2,0,8"/>

                <TextBlock Text="Answer 1:"/>
                <TextBox x:Name="Ans0" Margin="0,2,0,4"/>

                <TextBlock Text="Answer 2:"/>
                <TextBox x:Name="Ans1" Margin="0,2,0,4"/>

                <TextBlock Text="Answer 3:"/>
                <TextBox x:Name="Ans2" Margin="0,2,0,8"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock VerticalAlignment="Center" Text="Correct index:" Margin="0,0,8,0"/>
                    <ComboBox x:Name="CorrectCombo" Width="80" SelectedIndex="0">
                        <ComboBoxItem Content="0"/>
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                    </ComboBox>
                    <Button Content="Add question" Width="130" Margin="8,0,0,0" Click="AddQuestion_Click"/>
                </StackPanel>

                <ListBox x:Name="QuestionsList" Height="160"/>
            </StackPanel>

            
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,12,0,0">
                <Button Content="Save" Width="120" Click="Save_Click"/>
                <Button Content="Clear" Width="120" Margin="8,0,0,0" Click="ClearAll_Click"/>
                <Button Content="Back" Width="120" Margin="8,0,0,0" Click="BackToMenu_Click" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
